<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/top_panel"
        layout="@layout/top_panel_minor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/no_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пока здесь ничего нет, добавьте товары в избранное, чтобы они появились здесь"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:fontFamily="sans-serif"
        android:textFontWeight="700"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/top_panel"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favorite_goods_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <include
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        layout="@layout/bottom_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>