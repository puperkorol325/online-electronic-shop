<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/border_bottom"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Philosophy That Addresses Topics Such As Goodness"
            android:fontFamily="sans-serif"
            android:textFontWeight="700"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/news_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agar tetap kinclong, bodi motor ten..."
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:fontFamily="sans-serif"/>
        <TextView
            android:id="@+id/news_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13 января 2025"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:textColor="#838589"
            android:fontFamily="sans-serif"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="0dp"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:cardCornerRadius="12dp">
        <ImageView
            android:id="@+id/news_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/news_image_1"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
</LinearLayout>