<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="25dp"
    android:fitsSystemWindows="true">
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/small_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textFontWeight="800"
            android:text="Подтверждение"/>
        <TextView
            android:id="@+id/message_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textFontWeight="500"
            android:textColor="#838589"
            android:text="Мы отправили сообщение с кодом на электронную почту xd*****el@gmail.com."
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:textFontWeight="400"
                    android:text="Код подтвеждения"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <TextView
                    android:id="@+id/resend_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:textFontWeight="500"
                    android:text="Отправить снова"
                    android:textColor="@color/primaryBlue"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/verification_code1"
                    android:layout_width="70sp"
                    android:layout_height="60dp"
                    android:background="@drawable/edit_text_bg"
                    android:inputType="number"
                    android:backgroundTintMode="add"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:maxLength="1"/>
                <EditText
                    android:id="@+id/verification_code2"
                    android:layout_width="70sp"
                    android:layout_height="60dp"
                    android:background="@drawable/edit_text_bg"
                    android:backgroundTintMode="add"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10sp"
                    android:maxLength="1"/>
                <EditText
                    android:id="@+id/verification_code3"
                    android:layout_width="70sp"
                    android:layout_height="60dp"
                    android:background="@drawable/edit_text_bg"
                    android:backgroundTintMode="add"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10sp"
                    android:maxLength="1"/>
                <EditText
                    android:id="@+id/verification_code4"
                    android:layout_width="70sp"
                    android:layout_height="60dp"
                    android:background="@drawable/edit_text_bg"
                    android:backgroundTintMode="add"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10sp"
                    android:maxLength="1" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/primaryBlue"
            android:text="Восстановить"
            android:layout_marginTop="50dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>